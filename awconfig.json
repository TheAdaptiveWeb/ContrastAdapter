{
    "name": "Contrast Adapter",
    "id": "contrast-adapter",
    "version": "1.0.0",
    "description": "Finds and fixes contrast issues",
    "script": "index.js",
    "webpackConfig": "./webpack.config.js",
    "author": "adamhirst",
    "preferenceSchema": {
        "useAAA": {
            "friendlyName": "Use WCAG 2.1 AAA",
            "default": true,
            "type": "switch",
            "description": "Enable AAA contrast standards enforcement."
        },
        "backgroundColor": {
            "friendlyName": "Background color",
            "default": "#000000",
            "type": "text",
            "description": "The amount of time (in seconds) the video will remain paused for while reading a description. Defaults to 3 seconds."
        },
        "foregroundColor": {
            "friendlyName": "Text color",
            "default": "#ffffff",
            "type": "text",
            "description": "The amount of time (in seconds) the video will remain paused for while reading a description. Defaults to 3 seconds."
        }
    }
}