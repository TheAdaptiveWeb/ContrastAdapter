{
    "name": "Contrast Adapter",
    "id": "contrast-adapter",
    "version": "1.0.1",
    "description": "Finds and fixes contrast issues",
    "script": "index.js",
    "webpackConfig": "./webpack.config.js",
    "tags": ["color vision"],
    "author": "adamhirst",
    "preferenceSchema": {
        "useAAA": {
            "friendlyName": "Use WCAG 2.1 AAA",
            "default": true,
            "type": "switch",
            "description": "Enable AAA contrast standards enforcement."
        },
        "backgroundColor": {
            "friendlyName": "Background color",
            "default": "#000000",
            "type": "text",
            "description": "The background color to set."
        },
        "foregroundColor": {
            "friendlyName": "Text color",
            "default": "#ffffff",
            "type": "text",
            "description": "The foreground color to set."
        }
    }
}